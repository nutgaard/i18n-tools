{
  "name": "@nutgaard/i18n-tools",
  "version": "0.0.0-development",
  "description": "Tools to work with I18N messages",
  "keywords": [
    "I18N",
    "bundler",
    "tool",
    "compiler",
    "intl"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nutgaard/i18n-tools"
  },
  "main": "./lib/index.js",
  "bin": {
    "i18n-tool": "i18n-tool"
  },
  "files": [
    "lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prepare": "husky install",
    "commit": "git-cz",
    "test": "vitest --coverage",
    "test-local": "node lib/index.js build example/messages example/compiled -f formatjs --ast --lut --strict --typescript --timeZone Europe/Oslo",
    "build": "rm -rf lib && tsc -p ."
  },
  "author": "Nicklas Utgaard",
  "license": "MIT",
  "peerDependencies": {
    "@formatjs/intl": "^2.8.0"
  },
  "devDependencies": {
    "@formatjs/intl": "^2.8.0",
    "@types/node": "^20.3.0",
    "@vitest/coverage-v8": "^0.32.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "memfs": "^3.5.3",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "vitest": "^0.32.0"
  },
  "dependencies": {
    "@formatjs/cli-lib": "^6.1.2",
    "@formatjs/icu-messageformat-parser": "^2.5.0",
    "chokidar": "^3.5.3",
    "commander": "^12.1.0"
  },
  "lint-staged": {
    "*.{ts,js,css,md}": "prettier --write"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
